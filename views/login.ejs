<% include partials/header %>
    <h1>Bookstore: Login page</h1>

    <% if(isLoginFailed){%>
        <p>
            <h3>Login failed! Please try again!</h3>
        </p>
    <%}%>
    <div>
        <% if(errors){%>
            <p>
                <h3>Login failed! Incorrect input</h3>
            </p>
            <ul>
                <% errors.forEach(function(error){%>
                    <li><%= error.msg %></li>
                <%})%>
            </ul>
        <% } %>
    </div>
            <form action="login" method="post">
                <table width="75%">
                    <tbody>
                        <tr>
                            <td width="48%">Enter your name</td>
                            <td width="52%">
                                <input name="name" type="text">
                            </td>
                        </tr>
                        <tr>
                            <td width="48%">Enter your password</td>
                            <td width="52%">
                                <input name="pwd" type="password">
                            </td>
                        </tr>
                    </tbody>
                </table>
                <p>
                    <input name="Submit" value="Login" type="submit">
                    <input name="Reset" value="Reset form" type="reset">
                </p>
            </form>

            <% include partials/footer %>